<h2>Forgot your password?</h2><br />

<p>Enter your account's email to receive password reset instructions:</p><br />

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class='form'><%= f.email_field :email, autofocus: true, placeholder: "Email" %></div><br />

  <div><%= f.submit "Reset Password", class:'btn btn-default' %></div><br />
<% end %>

<%= render "devise/shared/links" %><br />
