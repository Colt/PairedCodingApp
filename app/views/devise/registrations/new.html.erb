<h3>Sign up</h3><br />

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class='form'><%= f.label :first_name %><br />
                    <%= f.text_field :first_name, placeholder: 'First Name' %></div>

  <div class='form'><%= f.label :last_name %><br />
                    <%= f.text_field :last_name , placeholder: 'Last Name' %></div>

  <div class='form'><%= f.label :profile_name %><br />
                    <%= f.text_field :profile_name, placeholder: 'Profile Name' %></div><br />

  <div class='form'><%= f.email_field :email, autofocus: true, placeholder: 'Email' %></div><br />

  <div class='form'><%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %></div><br />

  <div class='form'><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %></div><br />

  <div><%= f.submit "Sign up", class:'btn btn-primary' %></div><br />
<% end %>

<%= render "devise/shared/links" %>
